    "compilerOptions": {
        "module": "system",
        "target": "es2017",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "watch": false
    },
    "include": [
        "*.ts"
    ]
}